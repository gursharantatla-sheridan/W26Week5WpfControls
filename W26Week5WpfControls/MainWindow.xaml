<Window x:Class="W26Week5WpfControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W26Week5WpfControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20" FontWeight="Bold">
    <Canvas>
        <StackPanel Height="77" Width="117" Canvas.Left="655" Canvas.Top="127" Background="LightBlue">
            <Button Content="Button 1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button Content="Button 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </StackPanel>
        <Image Height="70" Canvas.Left="10" Canvas.Top="90" Width="132" HorizontalAlignment="Left" VerticalAlignment="Top" Source="/Car.png"/>

        <GroupBox Height="144" Header="Hobbies" Width="165" Canvas.Left="26" Canvas.Top="194" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <CheckBox x:Name="chkSinging" Content="Singing"/>
                <CheckBox x:Name="chkGardening" Content="Gardening"/>
                <CheckBox x:Name="chkTravelling" Content="Travelling"/>
                <CheckBox x:Name="chkRiding" Content="Bike Riding"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnGetHobbies" Content="Get Hobbies" Canvas.Left="34" Canvas.Top="355" HorizontalAlignment="Left" VerticalAlignment="Center" Width="157" Click="btnGetHobbies_Click"/>
        <Label x:Name="lblMessage" Content="" Canvas.Left="523" Canvas.Top="265" Height="121" Width="226" Background="#FFC5FBE9"/>

        <GroupBox Height="125" Header="Gender" Width="155" Canvas.Left="190" Canvas.Top="41" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel>
                <RadioButton x:Name="rdoFemale" Content="Female"/>
                <RadioButton x:Name="rdoMale" Content="Male"/>
                <RadioButton x:Name="rdoOther" Content="Other"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnGetGender" Content="Get Gender" Canvas.Left="188" Canvas.Top="156" Width="157" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnGetGender_Click"/>
        <ComboBox x:Name="cmbCities" Canvas.Left="225" Canvas.Top="217" Width="120" SelectionChanged="cmbCities_SelectionChanged" IsEditable="True">
            <ComboBoxItem Content="Toronto"/>
            <ComboBoxItem Content="Paris"/>
            <ComboBoxItem Content="Nairobi"/>
            <ComboBoxItem Content="Tokyo"/>
            <ComboBoxItem Content="Sydney"/>
        </ComboBox>
        <Button x:Name="btnGetCity" Content="Get City" Canvas.Left="225" Canvas.Top="265" HorizontalAlignment="Left" VerticalAlignment="Center" Width="118" Click="btnGetCity_Click"/>

        <ListBox x:Name="lstCountries" Height="199" Width="184" Canvas.Left="414" Canvas.Top="51" SelectionChanged="lstCountries_SelectionChanged">
            <ListBoxItem Content="Canada"/>
            <ListBoxItem Content="England"/>
            <ListBoxItem Content="Peru"/>
            <ListBoxItem Content="China"/>
            <ListBoxItem Content="Egypt"/>
        </ListBox>
        
        <Menu Height="24" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="Cu_t"/>
                <MenuItem Header="_Copy"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
        </Menu>
    </Canvas>
</Window>
